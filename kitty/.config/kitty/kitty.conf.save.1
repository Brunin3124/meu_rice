# Fonte (Use a Nerd Font que instalamos antes)
font_family      JetBrainsMono Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        12.0

# Opacidade do Fundo (Para o efeito Cyberpunk)
background_opacity 0.85

# Margem interna (Para o texto n√£o colar na borda)
window_padding_width 10

# Desabilitar o sino sonoro (Aquele 'bip' chato)
enable_audio_bell no


# BEGIN_KITTY_THEME
# VividPunk
#include current-theme.conf

#text cursor
cursor #7b3bdb
cursor_text_color #37c71e
cursor_shape block
cursor_trail 2
#scroll bar
scrollbar_jump_on_click yes
scrollbar_interactive yes
scrollbar_width 2

# END_KITTY_THEME
